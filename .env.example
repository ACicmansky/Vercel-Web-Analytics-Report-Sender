TARGET_WEBSITE=www.website.sk

# Google Analytics Configuration
# Get your GA4 Property ID from: https://analytics.google.com/
# Format: 123456789 (numbers only)
GA_PROPERTY_ID=your_property_id_here

# Service Account Credentials (choose ONE method):
# Method 1: Path to service account JSON file (recommended for local development)
GA_CREDENTIALS_FILE=path/to/service-account.json

# Method 2: Service account JSON as environment variable (recommended for production)
# GA_CREDENTIALS_JSON_BASE64={"type":"service_account","project_id":"...","private_key":"..."}

# Setup Instructions:
# 1. Create service account in Google Cloud Console
# 2. Enable Google Analytics Data API
# 3. Download service account JSON credentials
# 4. Grant service account "Viewer" access to your GA4 property
# 5. Configure custom events in GA4: form_submit, email_click, phone_click

# AI Configuration
# Google Gemini API key from: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_google_api_key_here
AI_MODEL=gemini-2.5-flash

# Email Configuration (SMTP)
# For Gmail: Use App Password (not regular password)
# https://support.google.com/accounts/answer/185833
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Email Settings
EMAIL_FROM=your_email@gmail.com
EMAIL_FROM_NAME=Analytics Reporter
EMAIL_TO=recipient@example.com
EMAIL_SUBJECT_PREFIX=[Analytics Report]

# Scheduling Configuration
# Report interval in days
REPORT_INTERVAL_DAYS=30
# Time to send report (24-hour format HH:MM)
REPORT_TIME=09:00
# Timezone for scheduling (e.g., Europe/Bratislava, UTC, America/New_York)
TIMEZONE=Europe/Bratislava

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# Optional: Error Notification Email
# Send separate email on critical errors
ERROR_NOTIFICATION_EMAIL=admin@example.com
